<!-- /Header -->

<!-- Main -->

<div class="col-lg-2 col-md-2 col-sm-3 col-xs-12" style="text-align:center;">
    <strong><span class="fas fa-tasks"></span> My Events</strong>
    <hr>
    <% if(Array.isArray(events) && events.length ) { %>
    <div class="list-group" style="text-align:left;">
      <% events.forEach(function(event) { %>
        <a href="/dashboard" class="list-group-item"><i class="fa fa-calendar"></i> <%= event.event_name %></a>
      <% }) %>
    </div>
    <% } else { %>
    <div class="jumbotron">
      You haven't created any events.
    </div>
    <% } %>
</div><!-- /span-3 -->
<div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
    <!-- Right -->

    <div id="event_form" class="jumbotron">
      <form action="/dashboard" method="post">
        <div style="text-align:center; font-size:150%">
          Create an Event!
        </div>
        <div>
          <div>
            Event Name
          </div>
          <input type="text" name="event_name" placeholder="Event Name:">
        </div>
        <div>
          <div>
            Description
          </div>
          <input type="text" name="description" placeholder="Description:">
        </div>
        <div>
          <div>
            Event Time
          </div>
          <div style="width:50%">
            <input type="date" name="mdy"></input>
          </div>
          <div style="width:50%">
            <input type="time" name="hm"></input>
          </div>
        </div>
        <br>
        <div>
            <input class="btn btn-primary" type="submit" value="Submit"/>
        </div>
      </form>
    </div>
</div>


</html>
